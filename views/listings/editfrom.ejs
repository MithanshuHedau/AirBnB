<% layout("/layouts/boilerplate") %>

<div class="min-h-screen flex items-center justify-center px-4 py-8">
  <div
    class="bg-[#1e1e1e] border border-gray-700 shadow-xl rounded-2xl p-6 sm:p-8 max-w-4xl w-full flex flex-col sm:flex-row gap-6"
  >
    <div class="flex-1 flex flex-col space-y-4">
      <h2 class="text-2xl font-semibold text-white text-center sm:text-left mb-4">
        Edit Listing: <span class="text-yellow-400"><%= listing._id %></span>
      </h2>

      <form method="post" action="/listings/<%= listing._id %>?_method=PUT" class="flex flex-col space-y-4">
        <input
          type="text"
          name="title"
          value="<%= listing.title %>"
          placeholder="Title"
          required
          class="p-3 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400"
        />
        <input
          type="text"
          name="description"
          value="<%= listing.description %>"
          placeholder="Description"
          required
          class="p-3 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400"
        />
        <input
          type="text"
          name="price"
          value="<%= listing.price %>"
          placeholder="Price"
          required
          class="p-3 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400"
        />
        <input
          type="text"
          name="location"
          value="<%= listing.location %>"
          placeholder="Location"
          required
          class="p-3 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400"
        />
        <input
          type="text"
          name="country"
          value="<%= listing.country %>"
          placeholder="Country"
          required
          class="p-3 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400"
        />
        <input
          type="text"
          name="image"
          value="<%= listing.image %>"
          placeholder="Image URL"
          required
          class="p-3 rounded-md bg-gray-800 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-yellow-400"
        />

        <button
          type="submit"
          class="bg-yellow-400 text-black font-semibold py-3 rounded-lg hover:bg-yellow-500 transition"
        >
          Update Listing
        </button>
      </form>

      <a style="text-decoration: none;"
        href="/listing"
        class="mt-4 inline-block text-center text-yellow-400 hover:text-yellow-500 underline"
      >
        ‚Üê Back to Listings
      </a>
    </div>

    <div class="flex-1 flex justify-center items-center">
      <img
        src="<%= listing.image %>"
        alt="Listing Image"
        class="rounded-lg max-h-80 object-cover border border-gray-600"
      />
    </div>
  </div>
</div>

